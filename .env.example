# node-tg-cc Configuration
# Copy this file to .env and fill in your values

# ===================
# Logging Configuration
# ===================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Log format: console, json
LOG_FORMAT=console

# ===================
# Database Configuration
# ===================
# Path to SQLite database for session persistence
DB_PATH=sessions.db

# ===================
# Single Bot Configuration
# ===================
# Telegram bot token from @BotFather
BOT_TOKEN=your_telegram_bot_token_here

# Working directory for Claude Code operations
BOT_WORKING_DIR=/path/to/your/project

# Bot name (optional, for identification in logs)
BOT_NAME=MyClaudeBot

# Comma-separated list of allowed Telegram user IDs
# Leave empty to allow all users (not recommended for production)
BOT_WHITELIST=123456789,987654321

# Claude model to use (default: sonnet)
# Options: sonnet, opus, haiku, or full model ID
BOT_MODEL=sonnet

# Maximum conversation turns (default: 50)
BOT_MAX_TURNS=50

# Permission mode for tool execution
# Options: bypassPermissions (default), default, acceptEdits, plan
# - bypassPermissions: Auto-allow all tools (no confirmation needed)
# - default: Ask user permission for each tool
# - acceptEdits: Auto-allow file edits, ask for others
# - plan: Planning mode only
BOT_PERMISSION_MODE=bypassPermissions

# Timeout for permission requests in seconds (default: 60)
BOT_PERMISSION_TIMEOUT=60

# Additional arguments to pass to Claude CLI (optional)
BOT_CLAUDE_ARGS=

# Temporary directory for file uploads (optional)
# Defaults to .tg-cc-temp in the working directory
BOT_TEMP_DIR=

# Path to custom system prompt file (optional)
BOT_SYSTEM_PROMPT_FILE=

# Path to MCP configuration file (optional)
# If not specified, auto-detects .mcp.json in working directory
BOT_MCP_CONFIG_FILE=

# Extended thinking budget in tokens (0 = disabled, default: 0)
# Set to enable extended thinking. Minimum: 1024 when enabled.
# Recommended: 10240-32000 for complex reasoning tasks
# BOT_THINKING_BUDGET=10240

